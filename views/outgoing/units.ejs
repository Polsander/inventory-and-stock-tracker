<% layout("layouts/outgoingplate") %>


    <form action="/outgoing/units?_method=PUT" method="POST" novalidate class="needs-validation">
    <div class="row mb-5">
        <div class="col-6">
            <div class="form-group mb-1">
                <label for="unitName"> <strong>For Which Unit?</strong> </label>
                <select class="form-control" name="unit[name]" id="unitName" required>
                    <option value="" disabled selected> Please Select</option>
                    <% for (let unit of units) { %>
                        <option>
                            <%= unit.name %>
                        </option>
                        <% } %>
                </select>
            </div>
        </div>

        <div class="col-2 offset-2">
            <div class="form-group mb-1">
                <label for="langley"><strong>Quantity</strong></label>
                <input class="form-control" value="0" type="text" id="langley" name="unit[langley]" required>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col text-end">
            <button class="me-5 mt-5 btn btn-primary btn-lg">Submit</button>
        </div>
    </div>
    </form>

    <div>
        <a href="/incoming">Back</a>
    </div>